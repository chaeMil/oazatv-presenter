{
  "name": "oh-presenter",
  "version": "0.0.4",
  "description": "",
  "author": {
    "name": "Michal Mlejnek",
    "email": "chaemil72@gmail.com"
  },
  "license": "ISC",
  "main": "./app/server/main.js",
  "cross-os": {
    "compile": {
      "linux": "npm run compile_less",
      "darwin": "npm run compile_less",
      "win32": ""
    }
  },
  "scripts": {
    "compile_less": "npm run compile_canvas_less && npm run compile_server_less",
    "compile_canvas_less": "./node_modules/less/bin/lessc ./app/canvas/assets/base.less > ./app/canvas/assets/base.css",
    "compile_server_less": "./node_modules/less/bin/lessc ./app/server/assets/main.less > ./app/server/assets/main.css",
    "prestart": "cross-os compile",
    "start": "electron ./app/server/main",
    "canvas": "electron ./app/canvas/main",
    "pack": "build --dir",
    "dist": "cross-os compile && build"
  },
  "build": {
    "appId": "cz.chaemil.oh-presenter",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "a-color-picker": "^1.0.6",
    "ajv": "^6.5.3",
    "draggable": "^4.2.0",
    "electron-window-state": "^4.1.1",
    "eventbusjs": "^0.2.0",
    "fabric": "^2.3.6",
    "flexboxgrid": "^6.3.1",
    "font-awesome": "^4.7.0",
    "fs-extra": "^7.0.0",
    "hotkeys-js": "^3.3.5",
    "ionicons": "^3.0.0",
    "ip": "^1.1.5",
    "jquery": "^3.3.1",
    "json-socket": "^0.3.0",
    "knockout": "^3.4.2",
    "less": "^3.8.1",
    "mkdirp": "^0.5.1",
    "node-simple-router": "^0.10.1",
    "npm": "^6.4.0",
    "open-iconic": "^1.1.1",
    "reset-css": "^4.0.1",
    "system-font-families": "^0.4.1",
    "topcoat": "^0.7.5"
  },
  "devDependencies": {
    "cross-os": "^1.3.0",
    "electron": "^2.0.9",
    "electron-builder": "^20.28.2"
  }
}
